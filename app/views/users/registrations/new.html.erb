<div class="container">  
  <div class="card mt-3 m-auto col-6">
    <div class="card-header">
      <h2>Registration</h2>
    </div>
    <div class="card-body">   
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="d-flex flex-column justify-content-center">        
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
          
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>           

          <%= f.submit "Sign up", class: "btn btn-primary mb-3 mt-3" %>  
          <%= link_to "Sign Up with Line", user_line_omniauth_authorize_path, class: "btn btn-outline-success  mb-3" %>
          <%= link_to "Sign Up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-outline-primary  mb-3" %>
          <%= link_to "Login", new_user_session_path  %>
        
        </div>
      <% end %>
    </div>    
  </div>
</div>